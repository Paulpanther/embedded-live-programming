<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.paulmethfessel.embeddedliveprogramming</id>
    <name>Embedded Live Programming</name>
    <vendor>paulpanther</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.cidr.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="com.elp.services.ProbeService"/>
        <projectService
                serviceImplementation="com.elp.services.ExampleService"/>
        <projectService
                serviceImplementation="com.elp.services.ClassService"/>
        <codeInsight.inlayProvider
                language="ObjectiveC"
                implementationClass="com.elp.editor.ReplacementInlayProvider"/>
        <codeInsight.inlayProvider
                language="ObjectiveC"
                implementationClass="com.elp.editor.ProbeInlayProvider"/>
        <fileDocumentManagerListener
                implementation="com.elp.events.FileChangeListener"/>
        <intentionAction>
            <className>com.elp.actions.CreateReplacementAction</className>
        </intentionAction>
        <intentionAction>
            <className>com.elp.actions.CreateOrOpenExampleAction</className>
        </intentionAction>
        <intentionAction>
            <className>com.elp.actions.JumpToSourceAction</className>
        </intentionAction>
        <intentionAction>
            <className>com.elp.actions.CreateClassReplacementAction</className>
        </intentionAction>
        <completion.contributor
                order="first, before clangd"
                language="ObjectiveC"
                implementationClass="com.elp.editor.ReplacementCompletionContributor"/>
        <toolWindow
                factoryClass="com.elp.ui.toolWindow.ExampleToolWindowFactory"
                id="Examples"
                anchor="bottom"
                canCloseContents="true"/>
        <notificationGroup
                id="Embedded Live Programming Notification Group"
                displayType="BALLOON"/>
        <lang.foldingBuilder
                implementationClass="com.elp.editor.ClassFoldingBuilder"
                language="ObjectiveC"/>
        <lang.foldingBuilder
                implementationClass="com.elp.editor.IncludeFoldingBuilder"
                language="ObjectiveC"/>
        <lang.foldingBuilder
                implementationClass="com.elp.editor.NamespaceFoldingBuilder"
                language="ObjectiveC"/>
        <psi.implicitReferenceProvider implementation="com.elp.editor.ReplacementImplicitReferenceProvider" />
        <annotator language="ObjectiveC" implementationClass="com.elp.editor.ExampleAnnotator" />
    </extensions>
</idea-plugin>
